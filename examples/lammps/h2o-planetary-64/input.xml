<simulation>
  <output prefix="PLANETARY">
    <properties stride="4" filename="out"> [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential,kinetic_md,
    pressure_cv{megapascal}, volume] </properties>
    <trajectory filename="xc" stride="4" format="xyz"> x_centroid </trajectory>
  </output>
  <total_steps>500000</total_steps>
  <prng>
    <seed>32345</seed>
  </prng>
  <ffsocket name="lmpserial" mode="unix" pbc="false">
    <address>water</address> <latency>0.001</latency>
  </ffsocket>
  <system>
    <initialize nbeads="32">
<!--      <file mode="xyz"> water-64.xyz </file> -->
      <file mode="chk"> water-64.chk </file> 
      <velocities mode="thermal" units="kelvin"> 300 </velocities>
    </initialize>
    <forces>
      <force forcefield='lmpserial'>  </force>
    </forces>
    <ensemble>
      <temperature units="kelvin">300</temperature>
    </ensemble>
   <motion mode="multi">
    <motion mode="dynamics">
      <dynamics mode='nvt'>
	<thermostat mode="pile_g">
          <tau units="femtosecond">100</tau>
          <pile_lambda> 0.5 </pile_lambda>
	</thermostat>
	<timestep units="femtosecond"> 0.25</timestep>
      </dynamics>
    </motion>
    <motion mode="planetary">
      <planetary mode='md'>
        <thermostat mode="pile_g">
          <tau units="femtosecond">1e10</tau>
          <pile_lambda> 0.5 </pile_lambda>
        </thermostat>
        <timestep units="femtosecond"> 0.75 </timestep>
        <stride>   4 </stride>
        <nsamples> 256 </nsamples>
      </planetary>
    </motion>
  </motion>
  </system>
</simulation>
