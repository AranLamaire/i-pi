<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_cv{electronvolt}, potential{electronvolt}, pressure_cv{megapascal} ] </properties>
    <trajectory filename='pos' stride='1'> positions </trajectory>
    <trajectory filename='vel' stride='1'> velocities </trajectory>
    <checkpoint stride='200'/>
  </output>
  <total_steps> 2 </total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffsocket name='lammps' mode='unix'>
    <address> lmp </address>
  </ffsocket>
  <system>
    <initialize nbeads='1'>
      <file mode='xyz'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 300 </velocities>
    </initialize>
    <forces>
      <force forcefield='lammps'> </force>
    </forces>
    <motion mode='constrained_dynamics'>
      <constrained_dynamics mode='nvt' splitting='baoab'>
        <nsteps_geo> 5 </nsteps_geo>
        <timestep units='femtosecond'> 2.0 </timestep>
        <thermostat mode='langevin'>
            <tau units='femtosecond'> 100 </tau>
        </thermostat>
        <constraint mode="distance"> 
            <atoms> [0, 1] </atoms> <distance> 1.8897261 </distance>
        </constraint>
      </constrained_dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 300 </temperature>
    </ensemble>
  </system>
</simulation>
